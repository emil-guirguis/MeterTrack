{
  "watch": ["dist"],
  "ext": "js",
  "ignore": ["node_modules/**/*", "logs/**/*"],
  "delay": "1000",
  "env": {
    "NODE_ENV": "development",
    "LOG_LEVEL": "info"
  },
  "verbose": false,
  "restartable": "rs",
  "stdout": false,
  "colours": true,
  "exec": "timeout 5 node dist/index.js || echo MCP Server started - Use Ctrl+C to stop"
}