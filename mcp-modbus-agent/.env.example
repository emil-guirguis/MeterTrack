# MCP Modbus Agent Configuration

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/facility_management
MONGODB_DATABASE=facility_management
MONGODB_COLLECTION=meter_readings

# Modbus Configuration (Enhanced TypeScript Implementation)
# Connection Pool Settings
MODBUS_MAX_CONNECTIONS=20
MODBUS_IDLE_TIMEOUT=300000
MODBUS_ACQUIRE_TIMEOUT=30000
MODBUS_CREATE_RETRY_INTERVAL=5000
MODBUS_MAX_RETRIES=3
MODBUS_HEALTH_CHECK_INTERVAL=60000

# Default Connection Settings
MODBUS_DEFAULT_PORT=502
MODBUS_DEFAULT_TIMEOUT=5000
MODBUS_DEFAULT_UNIT_ID=1

# Error Handling Configuration
MODBUS_CIRCUIT_BREAKER_THRESHOLD=5
MODBUS_CIRCUIT_BREAKER_TIMEOUT=60000
MODBUS_BASE_RETRY_DELAY=1000
MODBUS_MAX_RETRY_DELAY=30000
MODBUS_BACKOFF_MULTIPLIER=2
MODBUS_JITTER_ENABLED=true

# Data Collection Configuration
COLLECTION_INTERVAL=30000
COLLECTION_BATCH_SIZE=10
COLLECTION_CONCURRENT_LIMIT=5
COLLECTION_RETRY_ATTEMPTS=3
COLLECTION_RETRY_DELAY=5000

# Field Mapping Configuration
MODBUS_MAP_FILE=modbus-map.json
FIELD_MAPPING_ENABLED=true
FIELD_VALIDATION_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/mcp-agent.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# MCP Server Configuration
MCP_SERVER_NAME=modbus-agent
MCP_SERVER_VERSION=1.0.0
MCP_TRANSPORT=stdio

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_LOG_INTERVAL=60000
MEMORY_MONITORING_ENABLED=true
CONNECTION_MONITORING_ENABLED=true

# Development Settings
NODE_ENV=development
DEBUG_ENABLED=false
VERBOSE_LOGGING=false