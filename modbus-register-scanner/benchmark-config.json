{
  "benchmarkScenarios": {
    "small_scan": {
      "description": "Small range scan for quick testing",
      "connection": {
        "host": "127.0.0.1",
        "port": 502,
        "slaveId": 1,
        "timeout": 5000,
        "retries": 3
      },
      "scanning": {
        "startAddress": 0,
        "endAddress": 99,
        "functionCodes": [3, 4],
        "batchSize": 50,
        "enableBatching": true,
        "enableStreaming": false
      },
      "performance": {
        "enableMemoryOptimization": true,
        "enableNetworkOptimization": true,
        "maxMemoryUsage": 104857600,
        "requestDelay": 10,
        "maxConcurrentRequests": 1,
        "adaptiveDelay": true
      },
      "expectedMetrics": {
        "maxDuration": 5000,
        "minThroughput": 20,
        "maxMemoryUsage": 50
      }
    },
    "medium_scan": {
      "description": "Medium range scan with streaming",
      "connection": {
        "host": "127.0.0.1",
        "port": 502,
