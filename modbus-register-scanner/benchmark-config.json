  "testEnvironment": {
    "description": "Configuration for test environment setup",
    "mockDevice": {
      "enabled": true,
      "responseDelay": {
        "min": 5,
        "max": 20
      },
      "errorRate": 0.05,
      "registerAccessibility": 0.9
    },
    "monitoring": {
      "memoryCheckInterval": 100,
      "performanceLogInterval": 1000,
      "enableDetailedLogging": false
    }
  },
  "reportSettings": {
    "outputFormat": "json",
    "includeDetailedMetrics": true,
    "generateCharts": false,
    "compareWithBaseline": true,
    "baselineFile": "performance-baseline.json"
  }
