        "retries": 3
      },
      "scanning": {
        "startAddress": 0,
        "endAddress": 999,
        "functionCodes": [3],
        "batchSize": 125,
        "enableBatching": true,
        "enableStreaming": true,
        "streamingThreshold": 500
      },
      "performance": {
        "enableMemoryOptimization": true,
        "enableNetworkOptimization": true,
        "maxMemoryUsage": 268435456,
        "requestDelay": 5,
        "maxConcurrentRequests": 1,
        "adaptiveDelay": true
      },
      "expectedMetrics": {
        "maxDuration": 15000,
