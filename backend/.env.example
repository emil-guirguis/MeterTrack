# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/facility_management
DB_HOST=localhost
DB_PORT=5432
DB_NAME=facility_management
DB_USER=username
DB_PASSWORD=password

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

# Modbus Configuration (New TypeScript Implementation)
# Connection Pool Settings
MODBUS_MAX_CONNECTIONS=10
MODBUS_IDLE_TIMEOUT=300000
MODBUS_ACQUIRE_TIMEOUT=30000
MODBUS_CREATE_RETRY_INTERVAL=5000
MODBUS_MAX_RETRIES=3
MODBUS_HEALTH_CHECK_INTERVAL=60000

# Default Modbus Connection Settings
MODBUS_DEFAULT_PORT=502
MODBUS_DEFAULT_TIMEOUT=5000
MODBUS_DEFAULT_UNIT_ID=1

# Modbus Error Handling
MODBUS_CIRCUIT_BREAKER_THRESHOLD=5
MODBUS_CIRCUIT_BREAKER_TIMEOUT=60000
MODBUS_BASE_RETRY_DELAY=1000
MODBUS_MAX_RETRY_DELAY=30000
MODBUS_BACKOFF_MULTIPLIER=2
MODBUS_JITTER_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
HELMET_ENABLED=true
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Threading Configuration
THREADING_ENABLED=true
THREADING_POOL_SIZE=4
THREADING_QUEUE_SIZE=1000