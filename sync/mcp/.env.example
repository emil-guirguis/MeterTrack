# Sync MCP Configuration

# Client System API Configuration
CLIENT_API_URL=https://client.meterit.com/api
CLIENT_API_KEY=your_api_key_here

# Sync Configuration
SYNC_INTERVAL_MINUTES=5
BATCH_SIZE=1000
MAX_RETRIES=5

# Local API Server Configuration (for Sync Frontend)
LOCAL_API_PORT=3002

# Local PostgreSQL Database Configuration
LOCAL_POSTGRES_HOST=localhost
LOCAL_POSTGRES_PORT=5432
LOCAL_POSTGRES_DB=meterit_sync
LOCAL_POSTGRES_USER=postgres
LOCAL_POSTGRES_PASSWORD=your_password_here

# BACnet Configuration
BACNET_INTERFACE=0.0.0.0
BACNET_PORT=47808
BACNET_BROADCAST_ADDRESS=255.255.255.255

# Meter Collection Configuration
COLLECTION_INTERVAL_SECONDS=60
METER_CONFIG_FILE=config/meters.json

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/mcp-agent.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# MCP Server Configuration
MCP_SERVER_NAME=modbus-agent
MCP_SERVER_VERSION=1.0.0
MCP_TRANSPORT=stdio

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_LOG_INTERVAL=60000
MEMORY_MONITORING_ENABLED=true
CONNECTION_MONITORING_ENABLED=true

# Development Settings
NODE_ENV=development
DEBUG_ENABLED=false
VERBOSE_LOGGING=false