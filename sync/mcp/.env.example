# Sync MCP Configuration

# PostgreSQL Sync Database Configuration (Local)
# Note: These are loaded from the root .env file (../../.env)
# POSTGRES_SYNC_HOST=localhost
# POSTGRES_SYNC_PORT=5432
# POSTGRES_SYNC_DB=meterit_sync
# POSTGRES_SYNC_USER=postgres
# POSTGRES_SYNC_PASSWORD=your_password

# PostgreSQL Client Database Configuration (Remote)
POSTGRES_CLIENT_HOST=remote.example.com
POSTGRES_CLIENT_PORT=5432
POSTGRES_CLIENT_DB=meterit_client
POSTGRES_CLIENT_USER=postgres
POSTGRES_CLIENT_PASSWORD=your_password

# Client System API Configuration
CLIENT_API_URL=http://localhost:3001/api
CLIENT_API_KEY=your_api_key_here

# Sync Configuration
SYNC_INTERVAL_SECONDS=60
BATCH_SIZE=100
MAX_RETRIES=5
MAX_CONNECTION_RETRIES=5
MAX_QUERY_RETRIES=3

# Local API Server Configuration (for Sync Frontend)
LOCAL_API_PORT=3002

# BACnet Configuration
BACNET_INTERFACE=0.0.0.0
BACNET_PORT=47808
BACNET_BROADCAST_ADDRESS=255.255.255.255

# Meter Collection Configuration
COLLECTION_INTERVAL_SECONDS=60
METER_CONFIG_PATH=config/meters.json

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/mcp-agent.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# MCP Server Configuration
MCP_SERVER_NAME=sync-mcp-server
MCP_SERVER_VERSION=1.0.0
MCP_TRANSPORT=stdio

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_LOG_INTERVAL=60000
MEMORY_MONITORING_ENABLED=true
CONNECTION_MONITORING_ENABLED=true

# Development Settings
NODE_ENV=development
DEBUG_ENABLED=false
VERBOSE_LOGGING=false
